<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
            xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="HelloWorld.RelaxAbsoluteLayout">
    <AbsoluteLayout>
        <Image Source="http://lorempixel.com/1920/1080/nature/7" Aspect="AspectFill" 
               AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" ></Image>

        <Label Text="Relax" FontSize="30" HorizontalOptions="Center" TextColor="White" AbsoluteLayout.LayoutBounds="0, 20, 1, 50" AbsoluteLayout.LayoutFlags="WidthProportional"></Label>
        <BoxView AbsoluteLayout.LayoutBounds="0,1,1,100" AbsoluteLayout.LayoutFlags="PositionProportional , WidthProportional" Opacity="0.5" BackgroundColor="Black"/>
        <StackLayout Padding="30,0" Orientation="Horizontal" AbsoluteLayout.LayoutBounds="0,1,1,100" AbsoluteLayout.LayoutFlags="PositionProportional , WidthProportional" >


            <Label HorizontalOptions="Center" VerticalOptions="Center" TextColor="White" FontSize="15" Text="Profile"></Label>
            <Label HorizontalOptions="CenterAndExpand" VerticalOptions="Center" TextColor="White" FontSize="15" Text="Meditate"></Label>
            <Label HorizontalOptions="Center" VerticalOptions="Center" TextColor="White" FontSize="15" Text="Themes"></Label>
        </StackLayout>
    </AbsoluteLayout>
    
</ContentPage>